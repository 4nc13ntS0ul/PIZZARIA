CREATE DATABASE PIZZARIA;
USE PIZZARIA;

CREATE TABLE CLIENTE(
NOME VARCHAR(120),
TELEFONE VARCHAR(11),
RUA VARCHAR(255),
NR INT,
BAIRRO VARCHAR(120),
CONSTRAINT PK_CLIENTE PRIMARY KEY (ID)
);

CREATE TABLE PEDIDO(
ID INT,
DTPEDIDO DATE,
IDCLIENTE INT,
CONSTRAINT PK_PEDIDO PRIMARY KEY (ID),
CONSTRAINT FK_PEDIDO_CLIENTE FOREIGN KEY (IDCLIENTE) REFERENCES CLIENTE(ID)
);

CREATE TABLE PEDIDOITENS(
ID INT,
IDPEDIDO INT,
IDSABOR INT,
PRECO FLOAT
CONSTRAINT PK_PEDIDO_ITEM PRIMARY KEY (ID),
CONSTRAINT FK_PEDIDOITENS_PEDIDO FOREIGN KEY (IDPEDIDO) REFERENCES PEDIDO(ID),
CONSTRAINT FK_PEDIDOITENS_SABOR FOREIGN KEY(IDSABOR) REFERENCES SABOR(ID),

DELETE ON
);

CREATE TABLE SABORES(
ID INT,
DESCRICAO VARCHAR(120),
PRECO FLOAT(9,2),
NOME VARCHAR(80),
CONSTRAINT PK_SABORES PRIMARY KEY (ID)
);
